<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <input type="text" class="form-control" name="title" placeholder="title" value="{{ note.title }}">
                <textarea name="description" class="form-control my-4">{{ note.description }}</textarea>
                <button class="btn btn-success" style="width: 100%;" type="submit">Save</button>

            </form>
        </div>
    </div>
</div>