<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                        </h4>
                    <p>{{description}}</p>
                    <form action="notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                         <button type="submit" class="btn btn-danger" style="width: 100%;">Delete</button>
                    </form>

                </div>
            </div>
        </div>

        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card" style="text-align: center;">
                <div class="card-body">
                    <h1>Hello {{user.name}}</h1>
                    <p class="lead">There are not notes yet.</p>
                    <a href="/notes/add" class="btn btn-success " style="width: 100%;">Create One!</a>
                </div>
            </div>
            </div>
    {{/each}}
</div>
